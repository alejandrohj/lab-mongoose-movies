<div>Create</div>
<form method="POST" action="/celebrities">
  <div class="form-group">
    <label for="celebrityName">Name</label>
    <input name="name" type="text" class="form-control" id="celebrityName">
  </div>
  <div class="form-group">
    <label for="celebrityOccupation">Occupation</label>
    <input name="occupation" type="text" class="form-control" id="celebrityOccupation">
  </div>
  <div class="form-group">
    <label for="celebrityCatchPhrase">Catch Phrase</label>
    <input name="catchPhrase" type="text" class="form-control" id="celebrityCatchPhrase">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

